<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Main colors -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/very_dark_blue</item>
        <item name="colorAccent">@color/blue</item>

    </style>


    <!-- Transparent backgroung theme -->
    <style name="AppThemeTransparent" parent="AppTheme">

        <!-- Hide the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Display the user wallpaper -->
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <!-- Improve the status and navigation bars display -->
        <item name="android:statusBarColor">@color/translucent_gray</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

    </style>


    <!-- Notification popup theme -->
    <style name="AppThemeNotification" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowElevation">0dp</item>
    </style>


    <!-- Buttons -->
    <style name="NormalButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorButtonNormal">@color/blue</item>
    </style>
    <style name="BorderlessButton">
        <item name="android:textColor">@color/blue</item>
    </style>


    <!-- Text clock -->
    <style name="TextClock">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/translucent_gray</item>
        <item name="android:shadowRadius">@dimen/shadow_radius</item>
    </style>


    <!--- Touch targets -->
    <style name="TouchTarget">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/translucent_gray</item>
        <item name="android:shadowRadius">@dimen/shadow_radius</item>
    </style>

</resources>
